{
  "manifest_version": 2,
  "name": "Facebook Time Keeper",
  "description": "Track your time spent on facebook!",
  "version": "1.4",

  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },

  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lodash.js", "jquery.js", "content.js"]
    }
    ],

    "devtools_page": "devtools/devtools.html",

  "browser_action": {
    "default_title": "Time Keeper"
  },

  "icons": {
      "16": "16clock.png",
      "32": "32clock.png",
      "48": "48clock.png",
      "128": "128clock.png"
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
]
}
